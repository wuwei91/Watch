<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/logBg"
        android:orientation="vertical" >
        <!--开始时间-->
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="开始时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/watchStartTime"
                android:background="@drawable/boder_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <!--结束时间-->
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="结束时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/watchEndTime"
                android:background="@drawable/boder_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <!--GPS签到、报警-->
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gps"
                android:src="@drawable/watch_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/alarm"
                android:layout_marginLeft="40dp"
                android:src="@drawable/watch_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <!--二维码签到、结束巡更-->
        <LinearLayout
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/code"
                android:src="@drawable/watch_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/overWatch"
                android:layout_marginLeft="40dp"
                android:src="@drawable/watch_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <watch.ww.app.com.watch.layout.MyListView
            android:id="@+id/watchListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>